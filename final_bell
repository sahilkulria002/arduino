#include <Wire.h>
#include "RTClib.h"

RTC_DS3231 rtc;

int IN1 = 6;   // L298N IN1
int IN2 = 7;   // L298N IN2
int ledPin = 12;

void setup() {
  // put your setup code here, to run once:

  pinMode(ledPin, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  Serial.begin(9600);

  if (!rtc.begin()) {
    Serial.println("Couldn't find RTC");
    while (1);
  }

  if (rtc.lostPower()) {
    Serial.println("RTC lost power, setting time!");
    rtc.adjust(DateTime(F(__DATE__), F(__TIME__))); 
  }

}

void loop() {
    DateTime now = rtc.now();

    int minute = now.minute();
    int second = now.second();
    int hour = now.hour();


    Serial.print(now.year(), DEC);
    Serial.print('/');
    Serial.print(now.month(), DEC);
    Serial.print('/');
    Serial.print(now.day(), DEC);
    Serial.print(" ");
    Serial.print(now.hour(), DEC);
    Serial.print(':');
    Serial.print(now.minute(), DEC);
    Serial.print(':');
    Serial.print(now.second(), DEC);
    Serial.println();
    
    
    if (hour == 8 && minute == 20 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(1000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 8 && minute == 30 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(15000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 9 && minute == 30 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 10 && minute == 15 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);   
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
      delay(1500);
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 10 && minute == 55 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
      delay(1500);        
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
      delay(1500);
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 11 && minute == 35 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(10000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 12 && minute == 05 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(15000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour == 12 && minute == 50 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } else if (hour ==13 && minute == 30 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
      delay(1500);
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(2000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW); 
    } else if (hour == 14 && minute == 10 && (second == 0 || second == 1)) {
      digitalWrite(IN1, HIGH);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, HIGH);
      delay(10000);
      digitalWrite(IN1, LOW);
      digitalWrite(IN2, LOW);
      digitalWrite(ledPin, LOW);
    } 
   

  delay(1000);
 
   

}
